@using L2ACP.Controllers
@using L2ACP.Extensions
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home Page"];
}
@model IndexViewModel
<div class="wrapper wrapper-content animated fadeIn">
    <div class="row  border-bottom white-bg dashboard-header">

        <div class="col-md-9">
            <h2>@Localizer["Welcome"] @Context.GetUsername()</h2>
            <select id="charsSelect" class="form-control m-b" asp-items="new SelectList(Model.CharacterNames)" name="account">
                <option selected="selected" disabled="disabled">@Localizer["Please select a character"]</option>
            </select>
            <div class="row">
                <div class="col-lg-12">
                    <div class="col-lg-3">
                        <div id="charinfo"></div>
                    </div>
                    <div class="col-lg-3">
                        <div id="inventory"></div>
                    </div>
                </div>
            </div>
            <div class="col-md-3">

            </div>

        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="wrapper wrapper-content">

                </div>
                <div class="footer">
                    <div>
                        <strong>@Localizer["Copyright"]</strong>
                    </div>
                </div>
            </div>
        </div>

    </div>
    </div>


    @section Scripts{
        <script>

            $('#charsSelect').change(function () {
                var charName = $("#charsSelect option:selected").val();
                $.get("/getinventory/" + charName,
                    function (data) {
                        $('#inventory').html(data);
                    });

                $.get("/getplayerinfo/" + charName,
                    function (data) {
                        $('#charinfo').html(data);
                    });
            });

            $('#charsSelect').val($("#charsSelect option:nth-child(2)").val());
            $('#charsSelect').change();
        </script>
    }
