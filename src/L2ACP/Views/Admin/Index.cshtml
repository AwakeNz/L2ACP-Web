@{
    ViewData["Title"] = Localizer["Admin area"];
}

<div class="row">
    <div class="serviceswrapper col-lg-2">
        <div class="row">
            <div class="col-lg-12">
                <div id="acpManage" class="widget navy-bg p-lg text-center">
                    <div class="m-b-md">
                        <i class="fa fa-dashboard fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            @Localizer["L2ACP Managment"]
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="playerManage" class="widget navy-bg p-lg text-center">
                    <div class="m-b-md">
                        <i class="fa fa-user-o fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            @Localizer["Player Managment"]
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="serverManage" class="widget navy-bg p-lg text-center">
                    <div class="m-b-md">
                        <i class="fa fa-server fa-4x"></i>
                        <h3 class="font-bold no-margins">
                            @Localizer["Server Managment"]
                        </h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div id="mapView" class="widget navy-bg p-lg text-center">
                    <div class="m-b-md">
                        <i class="fa fa-globe fa-4x" aria-hidden="true"></i>
                        <h3 class="font-bold no-margins">
                            @Localizer["Live Map View"]
                        </h3>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="serviceContainer col-lg-10">
        <div id="adminwrapper">
        </div>
    </div>

</div>
    @section Scripts{
        <script>
            $('#acpManage').click(function () {
                $.get("/admin/acpManage", function (data) {
                    $('#adminwrapper').html(data);
                }
                );
            });

            $('#playerManage').click(function () {
                $.get("/admin/playerManage", function (data) {
                    $('#adminwrapper').html(data);
                }
                );
            });

            $('#serverManage').click(function () {
                $.get("/admin/serverManage", function (data) {
                    $('#adminwrapper').html(data);
                }
                );
            });

            $('#mapView').click(function () {
                $.get("/admin/liveMap", function (data) {
                        $('#adminwrapper').html(data);
                        $('.serviceswrapper').hide();
                        $('.pace-done').addClass('mini-navbar');
                        $('.serviceContainer').removeClass('col-lg-10').addClass('col-lg-12');
                    }
                );
            });
        </script>
    }
